{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2015", "es2016", "es2017", "es2018", "es2019", "es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2020",

    // Enhance strictness.
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "strict": true,
    "isolatedModules": true,
    "outDir": "lib",
    "baseUrl": ".",
    "sourceMap": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
